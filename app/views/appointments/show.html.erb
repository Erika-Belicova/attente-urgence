<div class="main-container-pixel7 main-container-content">
  <h1>File d'attente</h1>

  <div>
    <h2><%= @appointment.hospital.name %></h2>
    <h3><%= @appointment.category.name %></h3>
  </div>

  <div>
    <ul>
      <li><i class="fa-solid fa-user-clock"></i></li>
      <li><i class="fa-solid fa-circle-notch"></i></li>
      <div>
        <% count = @waiting_list.length %>
        <%= count - 1 %>
      </div>
    </ul>
    <p>patients dans la file d'attente avant vous</p>
  </div>

  <div>
    <div id="waiting-list-card">
      <div id="waiting-list-inner">
        <% @waiting_list.each_with_index do |waiting, index| %>
          <div>
            <i class="fa-solid fa-circle-user"></i>
            <% if waiting.id == @waiting_list.last.id %>
              <%= "Vous Order:#{index + 1}" %>
            <% else %>
              <%= "Patient no. #{waiting.id} Order:#{index + 1}" %>
            <% end %>
          </div>
        <% end%>
      </div>
    </div>
  </div>

  <div>
    <div><h3>temps estimé</h3></div>
    <div>
      <% waiting_time = count * 20 %>
      <% hours = waiting_time / 60 %>
      <% minutes = waiting_time % 60 %>
      <% minutes = "00" if minutes == 0 %>
      <%= "#{hours.to_i}:#{minutes.to_s}" %>
    </div>
  </div>
</div>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
  Continuer
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel"></h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">

        <div class= "main-container-pixel17 main container-content">

          <div class= "cards-hospital">
            <div class= "card-category-alert " >
              <p><i class="fa-solid fa-bell icon-big"></i></p>
              <h1>Vous pouvez prendre la route !</h1>
            </div>
          </div>

          <div class= "cards-hospital">
            <div class= "card-category-alert" >
              <h2><i class="fa-solid fa-hospital small-icon"></i> Il reste 4 personnes avant vous</h2>
            </div>
          </div>

          <div class= "cards-hospital">
            <div class= "card-category-alert" >
              <h2><i class="fa-solid fa-map-location-dot small-icon"></i> Vous avez 33 minutes de routes</h2>
            </div>
          </div>

          <div class= "cards-hospital">
            <div class= "card-category-alert" >
              <h2><i class="fa-sharp fa-solid fa-magnifying-glass-location small-icon"></i> Rejoignez le CHU Rangueil au 1 Av du professeur Jean Poulhès, 31400 Toulouse </h2>
            </div>
          </div>

          <div class= "cards-hospital">
            <div class= "card-category-alert img">
                <%= image_tag 'logo.png', alt: 'Logo', class: "img" %>
            </div>
          </div>

          <div class= "cards-hospital ">
            <div class= "card-category-alert">
              <div class="d-flex justify-content-around">
                <%= button_to "Prenez la route !", appointment_map_path(@appointment), method: :get, class: "btn-third-big img h4" %>
              </div>
            </div>
          </div>

        </div>

      </div>
      <div class="modal-footer">
      </div>
    </div>
  </div>
</div>
