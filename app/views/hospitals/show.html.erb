<%#= cl_image_tag @hospital.photo.key, height: 300, width: 400, crop: :fill %>


<!--<div class= "main-container-pixel17 main-container-content">-->
  <h1>Détails</h1>
  <div class="cards-hospital">
      <div class= "hopital-details">
          <div class="card-category-hospital">

          <div class="d-flex flex-column align-items-center justify-content-center">

            <!--Nom de l'hopital -->
            <h2><%=@hospital.name%></h2>

            <!--div avec deux div pour l'image à gauche et le texte et les elements à l'interieur à droite-->

            <div class="hopital-details d-flex flex-column align-items-center justify-content-center">

              <!--image-->
              <div class='img d-flex justify-content-center'>
                <%= cl_image_tag @hospital.photo.key, alt: 'Logo', style: 'width: 100%; height: auto;' %>
              </div>
              <!--div avec le texte et les elements à l'interieur-->


                <div class="adress">
                  <!--texte-->
                  <p><i class="fa-solid fa-location-dot"></i> <%= @hospital.address%></p>

                </div>

              </div>

              </div>

                <div class="d-flex justify-content-around">
                  <!--texte-->
                  <p><i class="fa-solid fa-person-walking"></i> 2km</p>
                  <p><i class="fa-solid fa-solid fa-clock"></i> 1h30</p>
                  <p><i class="fa-solid fa-solid fa-map"></i> 45min</p>
                </div>


            </div>
            </div>

              <div class="cards-hospital">
                <div class="card-category-hospital">
                  <h2>Spécialités</h2>


                  <% if @categories.any? %>

                    <div class="specialities">

                    <% @categories.each_with_index do |category, index| %>
                      <!-- Chaque bloc de catégories -->
                        <%= link_to category.name, "#", class: "btn-specialty-#{index + 1} align-categories" %>
                    <% end %>
                    </div>
                  <% else %>
                    <p>Aucune spécialité n'est associée à cet hôpital.</p>
                  <% end %>
                </div>
              </div>




             <div class="cards-hospital">
                <div class= "card-category-hospital">
                  <h2>Localisation</h2>
                  <div class='img d-flex justify-content-center '>
                <%= image_tag 'Hospital-pix/itinirary-mini.png', alt: 'Itinirary-mini', style: 'width: 100%; height: auto; overflow: hidden; border-bottom-left-radius: 16px; border-bottom-right-radius: 16px;' %>
                </div>
                </div>
              </div>


                   <div class="d-flex justify-content-around">
              <%= button_to "Retour", hospitals_path, method: :get, class: "btn-secondary" %>
              <%= button_to "Choisir", appointments_path, method: :post, class: "btn-third" %>
            </div>
      </div>
  </div>
<!--</div>-->
